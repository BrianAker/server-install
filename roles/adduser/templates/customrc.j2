# vim:ft=sh

if [ -z "$CUSTOMRC_INCLUDED" ]
then
  CUSTOMRC_INCLUDED=yes

  if [ -d "$HOME/.profile.d" ]; then
    PROFILE_D_FILES=(`ls $HOME/.profile.d/*.sh`)
    for i in "${PROFILE_D_FILES[@]}" ; do
      if [[ -r "$i" ]]; then
        if [ "${-#*i}" != "$-" ]; then
          . "$i"
        else
          . "$i" >/dev/null
        fi
      fi
    done
  fi
fi
