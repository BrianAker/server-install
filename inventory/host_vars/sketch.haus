bind: bind

hosts_allow:
  - 'ALL:localhost'
  - 'sshd:10.0.2.17'
  - 'sshd:10.0.2.64'
  - 'sshd:10.0.3.12'
  - 'sshd:10.0.3.21'
  - 'sshd:10.0.3.30'
  - 'sshd:10.0.2.30 '
  - 'sshd:50.197.78.105'
  - 'sshd:50.197.78.106'
  - 'sshd:50.197.78.107'
  - 'sshd:50.197.78.108'
  - 'sshd:50.197.78.109'
  - 'sshd:50.197.78.110'
  - 'sshd:98.129.238.122'
