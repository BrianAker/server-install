# vim:ft=automake
#

PKG_INSTALLER:= sudo zypper --non-interactive
PKG_UPDATE:= sudo zypper --non-interactive update
PKG_UPGRADE:= $(PKG_UPDATE)

$(PREP): 
	-$(PKG_INSTALLER) $(@F)

.PHONY: mysqld
mysqld:
	$(PKG_INSTALLER) mysql-community-server

.PHONY: pkg_update
	$(PKG_UPDATE)

ssh-import-id: /usr/bin/ssh-import-id
/usr/bin/ssh-import-id:
	sudo easy_install ssh-import-id
