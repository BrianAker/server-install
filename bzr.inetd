# default: off
# description: The bzr service can record the history of your source.
service bzr
{
	disable			= no
	port			= 4155
	socket_type		= stream
	protocol		= tcp
	wait			= no
	user			= apache
	passenv			= PATH
	server			= /usr/bin/bzr
	env			= HOME=/var/www/bzr
	server_args		= serve --allow-writes --inet --directory=/var/www/bzr
#	bind			= 127.0.0.1
}
